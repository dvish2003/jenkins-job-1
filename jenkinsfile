pipeline {
    agent any

    stages {

        stage('Clone project from GitHub') {
            steps {
                retry(3) {
                    git branch: 'main',
                        url: 'https://github.com/dvish2003/jenkins-job-1.git'
                }
            }
        }

        stage('Build Docker image') {
            steps {
                sh "docker build -t dvish2003/jenkins-job-1:v${BUILD_NUMBER} ."
            }
        }

        stage('Login to Docker Hub') {
            steps {
             withCredentials([string(credentialsId: 'docker-hub-password', variable: 'vish_docker_hub_password')]) {
                    sh "docker login -u dvish2003 -p ${vish_docker_hub_password}"
                }
            }
        }

        stage('Push Docker image to Docker Hub') {
            steps {
                sh "docker push dvish2003/jenkins-job-1:v${BUILD_NUMBER}"
            }
        }

        stage('logout from Docker Hub') {
            steps {
                sh "docker logout"
            }
        }
    }
}
